<!-- Views/Shared/Modals/_EmployeeModal.cshtml -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeModalLabel">Employee Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <div class="mb-3">
                        <label for="employeeId" class="form-label">Employee ID</label>
                        <input type="text" id="employeeId" class="form-control" placeholder="Enter Employee ID">
                    </div>

                    <!-- Align OK button to the right -->
                    <div class="mb-3 text-end">
                        <button type="button" id="btnFetchEmployee" class="btn btn-primary">OK</button>
                    </div>

                    <div class="mb-3">
                        <label for="employeeName" class="form-label">Employee Name</label>
                        <input type="text" id="employeeName" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="departmentName" class="form-label">Department</label>
                        <input type="text" id="departmentName" class="form-control" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="employeeSalary" class="form-label">Salary</label>
                        <input type="text" id="employeeSalary" class="form-control" disabled>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
